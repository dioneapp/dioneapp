{
	"name": "dione",
	"displayName": "Dione",
	"repository": {
		"type": "git",
		"url": "https://github.com/dioneapp/dioneapp.git"
	},
	"version": "0.0.8",
	"description": "Explore, Install, Innovate â€” in 1 Click.",
	"main": "./out/main/index.js",
	"author": {
		"name": "Dione",
		"email": "support@dione.app",
		"url": "https://getdione.app"
	},
	"homepage": "https://getdione.app",
	"scripts": {
		"format": "biome format --write ./src",
		"typecheck:node": "tsc --noEmit -p tsconfig.node.json --composite false",
		"typecheck:web": "tsc --noEmit -p tsconfig.web.json --composite false",
		"typecheck": "npm run typecheck:node && npm run typecheck:web",
		"start": "electron-vite preview",
		"dev": "electron-vite dev --noSandbox",
		"build": "npm run typecheck && electron-vite build",
		"postinstall": "electron-builder install-app-deps",
		"build:unpack": "npm run build && electron-builder --dir",
		"build:win": "npm run build && electron-builder --win --publish never",
		"build:mac": "electron-vite build && electron-builder --mac --publish never",
		"build:linux": "electron-vite build && electron-builder --linux --publish never",
		"deploy": "npx auto-changelog --package --commit-limit false --commit-url https://github.com/dioneapp/dioneapp/commits/main/ --sort-commits date-desc --release-summary && npm run build && electron-builder --win --publish always"
	},
	"auto-changelog": {
		"name": "Dione v${version}",
		"template": "compact",
		"hideCredit": true
	},
	"build": {
		"appId": "dione",
		"productName": "Dione",
		"compression": "maximum",
		"win": {
			"target": [
				{
					"target": "nsis",
					"arch": [
						"x64"
					]
				}
			],
			"icon": "./resources/icon.ico",
			"artifactName": "Dione-${version}-Installer-Windows.${ext}"
		},
		"mac": {
			"target": [
				{
					"target": "dmg",
					"arch": [
						"x64",
						"arm64"
					]
				}
			],
			"icon": "./resources/icon.icns",
			"category": "public.app-category.productivity",
			"artifactName": "Dione-${version}-Installer-Mac.${ext}"
		},
		"linux": {
			"target": [
				{
					"target": "AppImage",
					"arch": [
						"x64"
					]
				},
				{
					"target": "deb",
					"arch": [
						"x64"
					]
				},
				{
					"target": "rpm",
					"arch": [
						"x64"
					]
				}
			],
			"icon": "./resources/icon.png",
			"category": "Office",
			"artifactName": "Dione-${version}-Installer-Linux.${ext}"
		},
		"nsis": {
			"oneClick": false,
			"installerIcon": "./resources/icon.ico",
			"uninstallerIcon": "./resources/icon.ico",
			"createDesktopShortcut": true,
			"createStartMenuShortcut": true,
			"shortcutName": "Dione",
			"allowToChangeInstallationDirectory": true,
			"differentialPackage": false
		},
		"msi": {
			"oneClick": false,
			"createDesktopShortcut": true,
			"createStartMenuShortcut": true,
			"shortcutName": "Dione"
		},
		"files": [
			"out/**/*",
			"resources/**/*",
			"node_modules/**/*",
			"package.json",
			"!node_modules/@tailwindcss/oxide-*/**"
		],
		"extraResources": [],
		"directories": {
			"buildResources": "resources"
		},
		"publish": [
			{
				"provider": "github",
				"owner": "dioneapp",
				"repo": "dioneapp",
				"releaseType": "release"
			}
		]
	},
	"dependencies": {
		"@electron-toolkit/preload": "^3.0.2",
		"@electron-toolkit/utils": "^4.0.0",
		"@supabase/supabase-js": "^2.49.4",
		"@tailwindcss/vite": "^4.1.6",
		"cors": "^2.8.5",
		"dotenv": "^17.2.0",
		"electron-store": "^10.0.1",
		"electron-updater": "^6.6.2",
		"express": "^5.1.0",
		"framer-motion": "^12.9.4",
		"get-port": "^7.1.0",
		"isomorphic-git": "^1.30.1",
		"lucide-react": "^0.523.0",
		"minimal-discord-rpc": "^1.0.4",
		"node-machine-id": "^1.1.12",
		"node-vibrant": "^4.0.3",
		"pidtree": "^0.6.0",
		"react-router-dom": "^7.5.3",
		"semver": "^7.7.1",
		"socket.io": "^4.8.1",
		"socket.io-client": "^4.8.1",
		"systeminformation": "^5.27.7",
		"tailwindcss": "^4.1.6",
		"winston": "^3.17.0"
	},
	"devDependencies": {
		"@biomejs/biome": "^1.9.4",
		"@electron-toolkit/tsconfig": "^1.0.1",
		"@types/node": "^22.15.3",
		"@types/react": "^19.1.2",
		"@types/react-dom": "^19.1.3",
		"@vitejs/plugin-react": "^4.4.1",
		"auto-changelog": "^2.5.0",
		"electron": "^37.2.1",
		"electron-builder": "^26.0.15",
		"electron-vite": "^3.1.0",
		"react": "^19.1.0",
		"react-dom": "^19.1.0",
		"typescript": "^5.8.3",
		"vite": "^6.3.4"
	}
}
