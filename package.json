{
  "name": "dione",
  "displayName": "Dione",
  "repository": {
    "type": "git",
    "url": "https://github.com/dioneapp/dioneapp.git"
  },
  "version": "1.0.0",
  "description": "Explore, Install, Innovate â€” in 1 Click.",
  "main": "./out/main/index.js",
  "author": {
    "name": "Dione",
    "email": "support@getdione.app",
    "url": "https://getdione.app"
  },
  "homepage": "https://getdione.app",
  "scripts": {
    "format": "biome format --write ./src",
    "typecheck:node": "tsc --noEmit -p tsconfig.node.json --composite false",
    "typecheck:web": "tsc --noEmit -p tsconfig.web.json --composite false",
    "typecheck": "npm run typecheck:node && npm run typecheck:web",
    "start": "electron-vite preview",
    "dev": "electron-vite dev --noSandbox",
    "build": "npm run typecheck && electron-vite build",
    "postinstall": "electron-builder install-app-deps",
    "build:unpack": "npm run build && electron-builder --dir",
    "build:win": "npm run build && electron-builder --win --publish never",
    "build:mac": "electron-vite build && electron-builder --mac --publish never",
    "build:linux": "electron-vite build && electron-builder --linux --publish never",
    "generate-translations": "npx tsx src/renderer/src/translations/generateTranslations.ts",
    "deploy": "npx auto-changelog --package --commit-limit false --commit-url https://github.com/dioneapp/dioneapp/commits/main/ --sort-commits date-desc --release-summary && npm run build && electron-builder --win --publish always"
  },
  "build": {
    "appId": "dione",
    "productName": "Dione",
    "compression": "maximum",
    "win": {
      "target": [
        "nsis",
        "appx"
      ],
      "icon": "./resources/icon.png",
      "artifactName": "Dione-${version}-Installer-Windows.${ext}"
    },
    "appx": {
      "publisher": "CN=3A6E9F63-62F3-4EF2-AB9D-5666C6C26D6B",
      "identityName": "deeivihh.dioneapp",
      "displayName": "Dione Launcher",
      "publisherDisplayName": "deeivihh",
      "backgroundColor": "#000000"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "./resources/icon.icns",
      "category": "public.app-category.productivity",
      "artifactName": "Dione-${version}-Installer-Mac.${ext}",
      "entitlements": "resources/entitlements.mac.plist",
      "entitlementsInherit": "resources/entitlements.mac.plist",
      "extendInfo": {
        "NSCameraUsageDescription": "Application requests access to the device's camera.",
        "NSMicrophoneUsageDescription": "Application requests access to the device's microphone.",
        "NSDocumentsFolderUsageDescription": "Application requests access to the user's Documents folder.",
        "NSDownloadsFolderUsageDescription": "Application requests access to the user's Downloads folder."
      }
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "rpm",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "./resources/icon.png",
      "category": "Office",
      "artifactName": "Dione-${version}-Installer-Linux.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "installerIcon": "./resources/icon.ico",
      "uninstallerIcon": "./resources/icon.ico",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Dione",
      "allowToChangeInstallationDirectory": true,
      "differentialPackage": false,
      "uninstallDisplayName": "${productName}"
    },
    "msi": {
      "oneClick": false,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Dione"
    },
    "files": [
      "out/**/*",
      "resources/**/*",
      "node_modules/**/*",
      "package.json",
      "!node_modules/@tailwindcss/oxide-*/**"
    ],
    "extraResources": [],
    "directories": {
      "buildResources": "resources"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "dioneapp",
        "repo": "dioneapp",
        "releaseType": "release"
      }
    ]
  },
  "dependencies": {
    "@electron-toolkit/preload": "^3.0.2",
    "@electron-toolkit/utils": "^4.0.0",
    "@google/genai": "^1.32.0",
    "@monaco-editor/react": "^4.7.0",
    "@supabase/supabase-js": "2.49.4",
    "@tailwindcss/typography": "^0.5.19",
    "@tailwindcss/vite": "^4.1.17",
    "archiver": "^7.0.1",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "electron-store": "^10.1.0",
    "electron-updater": "^6.6.2",
    "express": "^5.2.1",
    "file-type": "^21.1.1",
    "framer-motion": "^12.23.25",
    "get-port": "^7.1.0",
    "isomorphic-git": "^1.36.0",
    "lucide-react": "^0.523.0",
    "minimal-discord-rpc": "^1.0.4",
    "monaco-editor": "^0.53.0",
    "nanoid": "^5.1.6",
    "node-machine-id": "^1.1.12",
    "node-vibrant": "^4.0.3",
    "ollama": "^0.6.3",
    "pidtree": "^0.6.0",
    "qrcode.react": "^4.2.0",
    "react-markdown": "^10.1.0",
    "react-router-dom": "^7.10.1",
    "react-syntax-highlighter": "^16.1.0",
    "rehype-raw": "^7.0.0",
    "rehype-sanitize": "^6.0.0",
    "remark-gfm": "^4.0.1",
    "remark-github-blockquote-alert": "^2.0.0",
    "semver": "^7.7.3",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1",
    "systeminformation": "^5.27.13",
    "tailwindcss": "^4.1.17",
    "winston": "^3.19.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@electron-toolkit/tsconfig": "^1.0.1",
    "@types/archiver": "^7.0.0",
    "@types/localtunnel": "^2.0.4",
    "@types/node": "^22.19.2",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^4.7.0",
    "electron": "^37.10.3",
    "electron-builder": "^26.3.5",
    "electron-vite": "^3.1.0",
    "localtunnel": "^2.0.2",
    "react": "^19.2.1",
    "react-dom": "^19.2.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vite": "^6.4.1"
  }
}